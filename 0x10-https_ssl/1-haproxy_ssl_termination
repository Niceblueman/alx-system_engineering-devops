global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend 364825-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/th3gr00t.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend 364825-backend

backend 364825-backend
	balance roundrobin
	server 364825-web-01 100.27.13.221:80 check
	server 364825-web-02 54.210.79.93:80 check
